{
  "name": "devhoc-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "DevHoc monorepo (frontend + backend)",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run -w frontend dev",
    "build": "npm run -w frontend build",
    "preview": "npm run -w frontend preview",
    "dev:frontend": "npm run -w frontend dev",
    "build:frontend": "npm run -w frontend build",
    "preview:frontend": "npm run -w frontend preview",
    "dev:backend": "npm run -w backend dev",
    "build:backend": "npm run -w backend build",
    "start:backend": "npm run -w backend start",
    "deploy:backend": "npx wrangler deploy --config backend/wrangler.toml"
  }
}
